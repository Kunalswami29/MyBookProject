@model IEnumerable<MyBookProject.Models.Book>
@{
    ViewBag.Title = "Home Page";
}

@Styles.Render("~/Content/Site.css")

<div class="p-3 mb-2 bg-warning text-dark">
    <div class="container col-lg-12">
        <h2 align="center">Book Store</h2>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" style="width:100%">
                <div class="item active">
                    <img src="~/images/book5.jpg" style="width:100%; height:auto; " />
                </div>

                <div class="item">
                    <img src="~/images/book6.jpg" style=" width: 100%; height:auto;" />
                </div>

                <div class="item">

                    <img src="~/images/book7.jpg" style="width: 100%; height: auto; " />
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
     </div>
        
        @Html.ActionLink("ResourceList","ResourceList","Home", new { @class = "btn btn-primary text-white"})
        @* Cards of books(Just like a Dashboard) *@

 </div>