@model IEnumerable<MyBookProject.Models.Book>
@{
    ViewBag.Title = "Home Page";
}

@Styles.Render("~/Content/Site.css")

<div class="p-3 mb-2 bg-warning text-dark">
    <div class="container col-lg-12">
        <h2 align="center">Book Store</h2>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" style="width:100%">
                <div class="item active">
                    <img src="~/images/book5.jpg" style="width:100% " />
                </div>

                <div class="item">
                    <img src="~/images/book6.jpg" style="width:100%" />
                </div>

                <div class="item">

                    <img src="~/images/book7.jpg" style="width:100%" />
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="col-12 border p-3  m-4">

            @if (Model.Any())
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <td></td>
                        <td></td>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td></td>
                            <td>
                                <div class="cart-item" style=" display: inline-flex; margin: 20px 10px;">
                                    <div class="left-block" style="width:300px; height:auto;">
                                        <img src="~/images/Novel.jpg"  alt="BookImage" width="100px" height="100px" />
                                    </div>
                                    <div class="right-block" style="padding: 0 20px;">
                                        <div>
                                            <h4>@item.BookName</h4>
                                            <div style=" color: #777;"> @item.Book_Auth </div>
                                            <div style="color: #777;">Rs @item.Rate</div>
                                        </div>
                                    </div>
                            </td>
                            <td></td>



                        </tr>
                    }

                </table>
            }
            else
            {
                <p>No Books Available !!</p>
            }



        </div>
    </div>

