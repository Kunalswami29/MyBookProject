@model IEnumerable<MyBookProject.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Welcome To Book Store!!</h2>

<div class="container row p-0 m-0 ">
    <div class="col-9">
        <center><h2 class="text-info "> Book List </h2></center>
    </div>
    <div class="col-9" style="margin-left:0px;">

        @using (Html.BeginForm())
        {
            <p style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:18px;">
                <b>Find By Name:</b> @Html.TextBox("SearchString")
                <input type="submit" class="btn btn-success" value="Search" />

            </p>
        }
    </div>

    <div class="col-4" style="float:right; margin-top:-40px;">


        @Html.ActionLink("Add New Book", "AddBook", "Admin", new { @class = " btn btn-success text-white" })

    </div>
    <br>
    <div class="col-3" style="float:left; margin-top:50px;">


        @Html.ActionLink("Tickets Raised", "Ticket", "Admin", new { @class = " btn btn-primary text-white" })

    </div>

    <div class="col-12 border p-3  m-3">

        @if (Model.Any())
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        Book Name
                    </th>
                    <th>
                        Author Name
                    </th>
                    <th>

                    </th>

                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/images/Novel (1).jpg" alt="BookImage" width="100" height="100" />
                            @Html.ActionLink(item.BookName, "Update", "Admin", new { id = item.BookId }, null)
                        </td>
                        <td>
                            <p style="margin-top:17px;">@item.Book_Auth</p>
                        </td>

                        <td>
                            <div class="btn btn-warning" style="margin-top:17px;">
                                @Html.ActionLink("Delete", "Delete", "Admin", new { id = item.BookId }, null)
                            </div>

                        </td>
                    </tr>
                }

            </table>
        }
        else
        {
            <p>No Books Available !!</p>
        }



    </div>

</div>

