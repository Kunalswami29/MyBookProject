@model MyBookProject.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Welcome Please Login !!</h2>
<hr />

@using (Html.BeginForm("Login", "User", FormMethod.Post))
{
<div class="panel panel-body panel-info text-white" style="
        background-image: url('../../images/o-STACK-OF-BOOKS-facebook.jpg');
        background-size: cover;
    ">


    @Html.AntiForgeryToken()
    <div class="form-group" style=" font-family:sans-serif; font-size:18px;">
        @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label col-md-2 " })
        <div class="col-md-10">
            @Html.EditorFor(model => model.UserId, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <br />

    <div class="form-group" style="font-family:sans-serif; font-size:18px;">
        @Html.LabelFor(model => model.PasswordHash, htmlAttributes: new { @class = "control-label col-md-2 " })
        <div class="col-md-10">
            @Html.PasswordFor(model => model.PasswordHash, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PasswordHash, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <br />

    <h4>@ViewBag.Message</h4>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Log In" class="btn btn-success" />
        <input type="reset" value="Reset" class="btn btn-danger" />
    </div>


</div>

    <hr />

}

