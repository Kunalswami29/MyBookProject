@model IEnumerable<MyBookProject.Models.Book>
@{
    ViewBag.Title = "Resource List";
}
<div class="col-12 border p-3  m-4">
    @using (Html.BeginForm())
    {
        <p style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:25px;">
            Find by name: @Html.TextBox("SearchString")
            <input type="submit" class="btn btn-success" value="Search" />
        </p>

    }

    @if (Model.Any())
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <td></td>
                <td></td>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td></td>
                    <td>
                        <div class="cart-item" style=" display: inline-flex; margin: 20px 10px;">
                            <div class="left-block" style="width:300px; height:auto;">
                                
                                <img src="~/images/Novel (1).jpg"  alt="BookImage" width="100" height="100" />  @* Image change *@
                            </div>
                            <div class="right-block" style="padding: 0 20px;">
                                <div>
                                    <h3 style=color:black;>@Html.ActionLink(item.BookName,"Details","Home",new {id = item.BookId},null)</h3>
                                    <div style=" color: #030d3a; font-weight:500;"> @item.Book_Auth </div>
                                    <div style="color: #270606; font-size:20px;">Rs @item.Rate</div>
                                </div>
                            </div>
                        </div>
                    </td>
                    <td></td>



                </tr>
            }

        </table>
    }
    else
    {
        <p>No Books Available !!</p>
    }



</div>
